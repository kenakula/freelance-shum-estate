block main
  section.section.estate-single
    .container
      .estate-single__inner
        .estate-single__guitar
          img(src="img/guitar-1.svg", alt="")
        .estate-single__breadcrumbs
          +breadcrumbs(breadcrumbs)
        .estate-single__sidebar
          .estate-single__info
            +estate-info(data)
        .estate-single__content
          .swiper.slider.estate-single__slider(data-slider)
            ul.swiper-wrapper.slider__wrapper(data-lightgallery)
              each item in data.images
                li.swiper-slide.slider__slide(data-src=item)
                  a.estate-single__image(data-fslightbox href=item)
                    img(src=item, alt="")
            .swiper-pagination.slider__pagination
          .estate-single__top
            .estate-single__price
              p !{data.price}
            h1.estate-single__title !{data.label}
            p.estate-single__description !{data.desc}
          .estate-single__info
            +estate-info(data)
          .estate-single__editor !{data.content}

