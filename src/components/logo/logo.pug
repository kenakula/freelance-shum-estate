mixin logo(grayMode)
  if !mainPage
    a.logo(href="/" class={'logo--gray': grayMode})&attributes(attributes)
      +imgSvg({path: '', image: 'logo', width: 100, height: 28, altText: 'Логотип'})
      span Estate
  else
    a.logo(href="javascript:void(0)" class={'logo--gray': grayMode})&attributes(attributes)
      +imgSvg({path: '', image: 'logo', width: 100, height: 28, altText: 'Логотип'})
      span Estate
