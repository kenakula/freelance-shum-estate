mixin services()
  section.section.services&attributes(attributes)
    .services__splat
      img(src="img/splat-2.svg", alt="", width=320, height=320)
    .container
      .services__inner
        .section__top.section__top--centered
          h2.services__title Предлагаем
        .section__body
          ul.services__list
            each item in servicesItems
              li.services__item
                .services__card
                  .services__card-top
                    +icon({name: 'rock-1', width: 100, height: 100})
                  .services__card-body
                    h3.services__card-title !{item.label}
                    p.services__card-text !{item.text}
