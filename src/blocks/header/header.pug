mixin header(isMainPage, currentPage)

  header.header&attributes(attributes)
    .header__inner.container
      if isMainPage
        a.header__logo(href="index.html")
          +imgSvg({path: '', image: 'logo', width: 100, height: 28, altText: 'Логотип'})
          span Estate
      else
        a.header__logo(href="javascript:void(0)")
          +imgSvg({path: '', image: 'logo', width: 100, height: 28, altText: 'Логотип'})
          span Estate
      +mainNav({links, currentPage})
